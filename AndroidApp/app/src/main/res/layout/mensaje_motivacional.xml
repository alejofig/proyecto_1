<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_inter">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="1000dp"
        android:text="Atentamente:"
        android:textSize="24dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="30dp"
        />
    <TextView
        android:id="@+id/mensajeMotivacional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="1000dp"
        tools:text="Piensa en tus metas iniciales y todo lo que has logrado hasta ahora. Â¡No te rindas!"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btnContMoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Continuar"/>

        <Button
            android:id="@+id/btnFinMoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Finalizar"
            android:backgroundTint="@color/gray"/>
    </LinearLayout>




</LinearLayout>