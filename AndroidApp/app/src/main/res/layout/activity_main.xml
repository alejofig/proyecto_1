<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black_inter"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:padding="20dp"
            android:textColor="@color/white" />


        <FrameLayout
            android:id="@+id/btn_entrenamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="entrenamiento">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="boton de entrenamiento"
                android:src="@drawable/baseline_directions_run_24"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_eventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Eventos">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="boton de eventos"
                android:src="@drawable/baseline_calendar_month_24"/>
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>