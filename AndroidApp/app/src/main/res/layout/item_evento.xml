<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_inter">

    <TextView
        android:id="@+id/fechaTV"
        android:layout_width="match_parent"
        tools:text="Domingo 13 de Marzo de 2024"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nombreTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white_inter"
        android:textSize="20dp"
        tools:text="- Maraton por el Mundo" />
    <TextView
        android:id="@+id/lugarTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="- Unicentro, Bogota"
        android:textSize="20dp"
        android:textColor="@color/white_inter"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="14dp"
        android:background="@color/white_inter"/>


</LinearLayout>